<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>



        <item name="android:windowBackground">#121212</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">#121212</item>
        <item name="materialCardViewStyle">@style/materialStyle</item>

    </style>


    <style name="materialStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">#20ffffff</item>
        <item name="cardCornerRadius">6dp</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>


    <style name="full_screen_dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">@android:color/white</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">true</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">#121212</item>


    </style>

</resources>
